{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src.**/*.tsx"],
  "typeRoots": ["src/types"],
  "exclude": ["src/**/*.spec.ts", "node_modules"]
}
